            android:text="@string/cancelled"
            android:textAppearance="@style/TextAppearance.OpenSans.Medium.Body2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/glButton"
